" Start of Yunlan's setting

source ~/.yl-config/vim/function/comments.vim

" hybrid line numbering
set nu rnu

" uft-8 encoding
set encoding=utf-8

" show file stats
set ruler
set laststatus=2

autocmd FileType tex                    " tex file settings
        \ setlocal autoindent
        \ softtabstop=4 expandtab smarttab 
        \ textwidth=76


" set color scheme to PaperColor Light
set t_Co=256

set background=light
colorscheme PaperColor
let g:vim_jsx_pretty_colorful_config=1

" Finding Files
set path+=**
set wildmenu

" Tag jumping
command! MakeTags !ctags -R .

let mapleader=" "
let maplocalleader=";"
" useful key-mappings
" change inside next parenthesis
onoremap in( :<c-u>normal! f(vi(<cr>
" change inside previous(last) parenthesis
onoremap il( :<c-u>normal! F(vi(<cr>
" short hand p - i( for change in paranthesis
onoremap p i(
" use j k as <esc> to exit to normal mode, disable <esc>
inoremap jk <esc>
inoremap <esc> <nop>
" comment and uncomment code
noremap gc :call Comment()<CR>
noremap gC : call Uncomment()<CR>
" unhighlight after search
nnoremap <Leader><space> :nohl<cr>
nnoremap <Leader>wq :wq<cr>
nnoremap <Leader>w :w<cr>
nnoremap <Leader>n :tabn<cr>
nnoremap <Leader>p :tabp<cr>
nnoremap <Leader>c :tabc<cr>
" End of Yunlan's Setting
